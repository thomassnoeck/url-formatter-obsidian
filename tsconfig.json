{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2021",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "moduleResolution": "node",
    "noEmitOnError": true,
    "importHelpers": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./" // Output JavaScript files in the current directory
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [ // Explicitly exclude node_modules to ensure source files are found
    "node_modules"
  ]
}
